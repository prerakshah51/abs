<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
   
    <grid name="gst-state-grid" title="States" model="com.axelor.apps.base.db.State">
        <field name="name"/>
		<field name="country"/>
    </grid>
    
    <form name="gst-state-form" title="State" model="com.axelor.apps.base.db.State" width="large">
    	<panel name="main">
			<field name="name"/>
		</panel>
		<panel name="localization" title="Localization">
			<field name="country" form-view="country-form" grid-view="country-grid" />
		</panel>  
    </form>
    
</object-views>